<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.vtpavlov.enterpriseportal.dto.User" table="Users">
		<meta attribute="class-description">This class contains the user details.</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>

		<property name="username" column="username" type="string" />
		<property name="password" column="password" type="string" />
		<property name="email" column="email" type="string" />
		<many-to-one name="role" column="companyRole"
		class="com.vtpavlov.enterpriseportal.dto.CompanyRole" not-null="true"/>
	</class>
</hibernate-mapping>
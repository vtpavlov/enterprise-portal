<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.vtpavlov.enterpriseportal.dto.Page"
		table="Pages">
		<meta attribute="class-description">This class represent web page created by users.</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="filePath" column="file_path" type="string" />
		<property name="title" column="title" type="string" />
		<property name="description" column="description" type="string" />
		<set name="allowedRoles" cascade="save-update" table="PAGES_ROLES">
			<key column="page_id" />
			<many-to-many column="role_id" class="com.vtpavlov.enterpriseportal.dto.CompanyRole"/>
		</set>
	</class>
</hibernate-mapping>